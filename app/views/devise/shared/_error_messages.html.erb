<% if resource.errors.any? %>
  <div class="bubble-card-flat p-6 bg-gradient-to-r from-error-100 to-error-200 border-error-300">
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <span class="text-2xl">⚠️</span>
      </div>
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-error-700 mb-2">
          <%= pluralize(resource.errors.count, "error") %> prevented this from being saved:
        </h3>
        <ul class="space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li class="text-error-600 font-medium">• <%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
