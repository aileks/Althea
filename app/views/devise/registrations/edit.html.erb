<div class="overflow-hidden grid place-items-center py-8 px-4 sm:px-6 lg:px-8 relative">
  <div class="w-full max-w-2xl space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-bubble mb-2">Edit Profile ‚öôÔ∏è</h2>

      <p class="text-neutral-600">Update your account settings</p>
    </div>

    <div class="bubble-card py-8 px-4 sm:px-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <div class="error-text mb-4">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <%= f.label :username, class: "block font-semibold text-neutral-700 mb-2" %>
            <%= f.text_field :username, placeholder: "Your username", class: "form-input w-full" %>
          </div>

          <div>
            <%= f.label :email, class: "block font-semibold text-neutral-700 mb-2" %>
            <%= f.email_field :email, placeholder: "you@example.com", autocomplete: "email", class: "form-input w-full" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bubble-card-flat p-4 bg-gradient-to-r from-warning-400 to-accent-500 border-warning-400">
            <div class="flex items-center space-x-2">
              <span class="text-lg">‚è≥</span>
              <span class="text-warning-700 font-medium">
                Currently waiting confirmation for: <%= resource.unconfirmed_email %>
              </span>
            </div>
          </div>
        <% end %>

        <div class="bubble-card-flat p-6 bg-gradient-to-r from-neutral-50 to-neutral-100">
          <h3 class="text-lg font-bold text-bubble mb-4">Change Password</h3>
          <p class="text-sm text-neutral-600 mb-4">Leave blank if you don't want to change your password</p>

          <div class="space-y-4">
            <div>
              <%= f.label :password, "New Password", class: "block font-semibold text-neutral-700 mb-2" %>
              <%= f.password_field :password, placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢", autocomplete: "new-password", class: "form-input w-full" %>
              <% if @minimum_password_length %>
                <p class="text-sm text-neutral-500 mt-1">
                  <%= @minimum_password_length %> characters minimum
                </p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm New Password", class: "block font-semibold text-neutral-700 mb-2" %>
              <%= f.password_field :password_confirmation, placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢", autocomplete: "new-password", class: "form-input w-full" %>
            </div>
          </div>
        </div>

        <div>
          <%= f.label :current_password, class: "block font-semibold text-neutral-700 mb-2" %>
          <p class="text-sm text-neutral-600 mb-2">We need your current password to confirm changes</p>
          <%= f.password_field :current_password, placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢", autocomplete: "current-password", class: "form-input w-full" %>
        </div>

        <div class="flex gap-4 justify-center">
          <%= f.submit "Update Profile", class: "btn-bubble text-lg" %>
          <%= link_to "Back", :back, class: "btn-bubble-secondary text-lg" %>
        </div>
      <% end %>
    </div>

    <div class="bubble-card p-6 bg-gradient-to-r from-error-100 to-error-200 border-error-300">
      <h3 class="text-lg font-bold text-error-700 mb-4">
        üö® Danger Zone
      </h3>
      <p class="text-error-600 mb-4">
        Once you delete your account, there is no going back. Please be certain.
      </p>
      <%= button_to "Delete Account",
          registration_path(resource_name),
          data: {
            confirm: "Are you sure you want to delete your account? This action cannot be undone.",
            turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone."
          },
          method: :delete,
          class: "btn-bubble-danger" %>
    </div>
  </div>
</div>
