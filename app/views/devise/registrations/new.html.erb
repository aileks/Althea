<div class="md:mt-12 grid place-items-center py-12 px-4 sm:px-6 lg:px-8 relative">

  <div class="w-full max-w-md space-y-8">
    <h2 class="text-center text-3xl font-bold text-bubble mb-2">
      Create your account
    </h2>
    <p class="text-center text-neutral-600 mb-8">Join thousands on their vegan journey</p>

    <div class="bubble-card py-8 px-4 sm:px-10 relative">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div class="error-text mb-4">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div>
          <%= f.label :username, class: "block font-semibold text-neutral-700 mb-2" %>
          <div class="relative">
            <%= f.text_field :username, placeholder: "Your username", autofocus: true, autocomplete: "username", class: "form-input w-full" %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "block font-semibold text-neutral-700 mb-2" %>
          <div class="relative">
            <%= f.email_field :email, placeholder: "you@example.com", autocomplete: "email", class: "form-input w-full" %>
          </div>
        </div>

        <div>
          <div class="flex justify-between items-baseline mb-2">
            <%= f.label :password, class: "block font-semibold text-neutral-700" %>
            <% if @minimum_password_length %>
              <em class="text-neutral-500 text-sm">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
          <div class="relative">
            <%= f.password_field :password, placeholder: "••••••••", autocomplete: "new-password", class: "form-input w-full" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block font-semibold text-neutral-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password_confirmation, placeholder: "••••••••", autocomplete: "new-password", class: "form-input w-full" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full btn-bubble text-lg" %>
        </div>
      <% end %>

      <div class="mt-8">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full h-px bg-neutral-200"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="px-4 bg-white text-neutral-600 text-sm font-medium">
              Or
            </span>
          </div>
        </div>

        <div class="mt-8 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
