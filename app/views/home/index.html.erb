<div class="mt-14">
  <!-- Hero Section -->
  <section class="py-12 px-4 text-center">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-4xl font-bold text-bubble mt-8 mb-4">
        🌱 Start Your Vegan Journey
      </h1>

      <% unless user_signed_in? %>
        <p class="text-xl text-neutral-600 mb-8 max-w-2xl mx-auto leading-relaxed">
          Join thousands taking on vegan challenges. Get daily support, track your impact, and connect with a thriving community.
        </p>
      <% end %>

      <div class="flex gap-6 justify-center flex-wrap mb-8">
        <% unless user_signed_in? %>
          <%= link_to "Start Your Challenge 🚀", new_user_registration_path, class: "btn-bubble text-lg" %>
        <% else %>
          <div class="bubble-card p-8 text-center mt-8 max-w-md">
            <h3 class="text-2xl font-bold text-bubble mb-2">Welcome back, <%= current_user.username %>! 👋</h3>

            <p class="text-neutral-600">Ready to continue your vegan journey?</p>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-8 px-4">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-3xl font-bold text-center text-bubble mb-8">
        Why Choose Althea?
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Feature Card 1 -->
        <div class="bubble-card p-8 text-center space-y-6">
          <div class="icon-bubble">
            <span class="text-2xl">💚</span>
          </div>

          <h3 class="text-xl font-bold text-bubble">Daily Support</h3>
          <p class="text-neutral-600 leading-relaxed">Get daily tips, recipes, and motivation to keep you inspired throughout your challenge.</p>
        </div>

        <!-- Feature Card 2 -->
        <div class="bubble-card p-8 text-center space-y-6">
          <div class="icon-bubble">
            <span class="text-2xl">📊</span>
          </div>

          <h3 class="text-xl font-bold text-bubble">Track Your Impact</h3>
          <p class="text-neutral-600 leading-relaxed">Visualize animals saved, CO2 reduced, and celebrate every milestone on your journey.</p>
        </div>

        <!-- Feature Card 3 -->
        <div class="bubble-card p-8 text-center space-y-6">
          <div class="icon-bubble">
            <span class="text-2xl">🤝</span>
          </div>

          <h3 class="text-xl font-bold text-bubble">Community</h3>
          <p class="text-neutral-600 leading-relaxed">Connect with like-minded people, share experiences, and support each other.</p>
        </div>
      </div>
    </div>
  </section>
</div>
