<div id="<%= dom_id post %>" class="bubble-card p-6 sm:p-8">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h2 class="text-2xl font-bold text-primary-800 leading-tight">
        <%= link_to post.title, post, class: "hover:text-primary-600 transition-colors" %>
      </h2>

      <div class="text-sm text-neutral-500 mt-1">
        Posted by
        <%= post.user.username %>
        &bull;
        <%= time_ago_in_words(post.created_at) %>
        ago
      </div>
    </div>

    <% if user_signed_in? && current_user == post.user %>
      <div class="flex-shrink-0">
        <%= link_to "Edit", edit_post_path(post), class: "link-bubble text-sm" %>
      </div>
    <% end %>
  </div>

  <div class="trix-content mt-4">
    <%= post.content %>
  </div>

  <div class="mt-6 border-t border-neutral-100 pt-4 flex items-center gap-4">
    <%= link_to post_path(post, anchor: 'comments'), class: "link-bubble" do %>
      <span><%= pluralize(post.comments.count, "Comment") %></span>
    <% end %>
  </div>
</div>
